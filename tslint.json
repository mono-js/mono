{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		"indent": [
			true,
			"tabs"
		],
		"semicolon": [
			true,
			"never"
		],
		"trailing-comma": [
			true,
			"never"
		],
		"quotemark": [
			true,
			"single",
			"avoid-escape"
		],
		"interface-name": [
			true,
			"never-prefix"
		],
		"no-var-requires": false,
		"curly": false,
		"ordered-imports": [
			false
		],
		"object-literal-sort-keys": false,
		"max-line-length": [
			false
		],
		"no-namespace": [
			false
		],
		"space-before-function-paren": [
			true,
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		]
	}
}
