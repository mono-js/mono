{
  "name": "@terrajs/mono",
  "version": "0.9.0",
  "description": "Framework to create monolithic REST API",
  "main": "lib/",
  "files": [
    "lib",
    "bin",
    "utils.js"
  ],
  "bin": {
    "mono": "./bin/mono.js"
  },
  "nyc": {
    "include": [
      "lib/"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint lib/ bin/ test/",
    "test": "npm run lint && nyc ava --verbose --serial test/ && nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "preversion": "npm test",
    "docs": "docsify serve ./docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terrajs/mono.git"
  },
  "contributors": [
    {
      "name": "Sebastien Chopin (@Atinux)"
    },
    {
      "name": "Benjamin Canac (@benjamincanac)"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "chalk": "^2.3.1",
    "clear-module": "^2.1.0",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "express-validation": "^1.0.2",
    "glob": "^7.1.2",
    "glob-promise": "^3.3.0",
    "helmet": "^3.11.0",
    "imperium": "^2.0.1",
    "joi": "^13.1.2",
    "joi-to-json-schema": "^3.2.0",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.5",
    "morgan": "^1.9.0",
    "nodemon": "^1.15.1",
    "sywac": "^1.2.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "codecov": "^3.0.0",
    "docsify-cli": "^4.2.0",
    "eslint": "^4.18.0",
    "mono-test-utils": "^1.2.3",
    "nyc": "^11.4.1"
  },
  "keywords": [
    "mono",
    "rest api",
    "framework",
    "monolithic",
    "rest-api",
    "acl",
    "log"
  ]
}
